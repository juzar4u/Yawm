@model AkhbaarAlYawm.DataAccess.Custom.Entities.UserComment


@if(Model.user != null)
{
<div id="newComment" style="margin: 0px;">


    <ul class="comment box">
        <span class='errorClass bg-danger' id="error" style="display:none;"></span>
        <li class="box">
            <div class="comment-img">
                <a href="#" onclick="return link(this)">
                    @{
                        string userImg = "";
                        string rootUrl = "";
                        if (!string.IsNullOrEmpty(Model.user.ThumbnailProfileImg))
                        {
                            rootUrl = AkhbaarAlYawm.Application.Helper.ApplicationConstants.Akhbaar_PP_URL;
                            userImg = Model.user.ThumbnailProfileImg;
                        }
                        else
                        {
                            rootUrl = AkhbaarAlYawm.Application.Helper.ApplicationConstants.Akhbaar_CP_URL;
                            userImg = "/Images/UserProfile/defaultUser.jpg";
                        }
                    @:<img src="@string.Format("{0}{1}", rootUrl, userImg)" alt="" style="width: 70px; height: 70px; margin-left: 8px;" /></a>
                        
                    }
            </div>
            <div class="comment-txt">
                
                <h3 style="font-weight: bold; margin: 0;">@string.Format("{0}{1}{2}{3}", Model.user.FirstName, "'s"," ", "Comment")</h3>
                <textarea id="postcomment" rows="2" cols="35" style="float: left; width: 233px; height: 100px; border: 4px solid #ccc;"></textarea>
                <input class="btn btn-default" type="submit" value="Post" style="margin-top: 30px;float: right;width: 85px;margin-right: 26px;" onclick="PostCommentFunction('@Model.user.UserID', '@Model.ArticleID')"/>
            </div>
        </li>

    </ul>
</div>
}
else
{
 <div id="newComment" style="margin: 0px;">


    <ul class="comment box">
        <span class="errorClass bg-danger" id="error" style="display:none;"></span> 
        <li class="box">
            <div class="comment-img">
                <a href="#" onclick="return link(this)">
                    <img src="~/Images/Profile/default.gif" alt="" style="width: 70px; height: 70px; margin-left: 8px;" /></a>
            </div>
            <div class="comment-txt">
                <h3 style="font-weight: bold; margin: 0;">Post Comment</h3>
                
                <textarea rows="2" cols="35" style="float: left; width: 233px; height: 100px; border: 4px solid #ccc;" onclick="redirect()"></textarea>
                <input class="btn btn-default" type="submit" value="Post" />
            </div>
        </li>

    </ul>
</div>   
}
<div id="renderPoPbox"></div>

<script type="text/javascript">
    function redirect() {
        window.location.href = "/Account/Login";
    }
    function PostCommentFunction(UserID, ArticleID){
        //alert("UserID is"+ UserID + "ArticleID is "+ ArticleID);
        $("#addloading").addClass("loading");
        if ($("#postcomment").val() == '')
        {
            $("#error").html('Please Enter Comment');
            $("#error").css('display', 'block');
            return false;
        }
        else{
            var id;
            if(window.location.href.indexOf("Home/Detail") > -1) {
                id = 1;
            }
            else{
                id = 2;
            }
            console.log(id);
            $.ajax({
                url: "/Comment/PostComment",
                type: "GET",
                dataType: "html",
                data: { "userId": UserID, "articleId":ArticleID, "comment": $("#postcomment").val(), "parentCommentId": 0, "commentCategoryID":id },
                success: function (data) {
                    
                    //setTimeout(function(){
                    //$("#CommentBox").load(data);
                    //}, 2000);
                    location.reload();
                    $("#addloading").removeClass("loading");
                    //$("#CommentBox").load(location.href + " #CommentBox");
                }
            });
        }
    }
    

</script>