@model AkhbaarAlYawm.DataAccess.Custom.Entities.ReplyComment

@{
    ViewBag.Title = "ReplyComment.Mobile";
}

<div id="replyComment" style="margin: 0px;">


    <ul class="comment box">
        <span class='errorClass bg-danger' id="Replyerror" style="display:none;"></span>
        <li class="box">
            <div class="comment-img">
                <a>
                     @{
                        string userImg = "";
                        string rootUrl = "";
                        if (!string.IsNullOrEmpty(Model.user.ThumbnailProfileImg))
                        {
                            rootUrl = AkhbaarAlYawm.Application.Helper.ApplicationConstants.Akhbaar_PP_URL;
                            userImg = Model.user.ThumbnailProfileImg;
                        }
                        else
                        {
                            rootUrl = AkhbaarAlYawm.Application.Helper.ApplicationConstants.Akhbaar_CP_URL;
                            userImg = "/Images/UserProfile/defaultUser.jpg";
                        }
                    @:<img src="@string.Format("{0}{1}", rootUrl, userImg)" alt="" style="width: 70px; height: 70px; margin-left: 8px;" /></a>
                        
                    }
                    
            </div>
            <div class="comment-txt">
                
                <h3 style="font-weight: bold; margin: 0;">@string.Format("{0}{1}{2}{3}", Model.user.FirstName, "'s"," ", "Comment")</h3>
                <textarea id="postcomment" rows="2" cols="35" style="float: left; width: 233px; height: 100px; border: 4px solid #ccc;"></textarea>
                <input class="btn btn-default" type="submit" value="Post" style="margin-top: 30px;float: right;width: 85px;margin-right: 26px;"  onclick="PostCommentFunction('@Model.user.UserID', '@Model.CommentID', '@Model.IsParentComment')"/>
            </div>
        </li>

    </ul>
</div>


<script type="text/javascript">
    function PostCommentFunction(UserID, CommentId, IsParentComment){
        //alert("UserID is"+ UserID + "ArticleID is "+ ArticleID);
        if ($("#postcomment").val() == '')
        {
            $("#Replyerror").html('Please Enter Comment');
            $("#Replyerror").css('display', 'block');
            return false;
        }
        else
        {
            var id;
            if(window.location.href.indexOf("Home/Detail") > -1) {
                id = 1;
            }
            else{
                id = 2;
            }
        
            $.ajax({
                url: "/Comment/PostReplyComment",
                type: "GET",
                dataType: "html",
                data: { "userId": UserID, "commentId":CommentId, "isParentComment":IsParentComment, "comment":$("#postcomment").val(), "CommentCategoryID": id },
                success: function (data) {
                    //setTimeout(function(){
                    //$("#renderPoPbox").html(data);
                    //}, 2000);
                    location.reload();
                }
            });
        }
    }
</script>