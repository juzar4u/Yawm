@model List<AkhbaarAlYawm.DataAccess.Custom.Entities.PP_Entities_Model.AkhbaarIndexModel>

@foreach (var items in Model)
{
    <li class="Container box" id="@items.ArticleID">
        <div class="list-img">
            <a href="/Home/Detail/@items.ArticleID">
                @if (items.IsVideo == true)
                {
                    <img src='@items.Entity.Thumbnail' alt="@items.Entity.Thumbnail"><i class="fa fa-play-circle fa-2x" aria-hidden="true" style="margin: -65px 25px; position: absolute; color: darkred;"></i>
                }
                else
                {
                    <img src='@string.Format("{0}{1}", AkhbaarAlYawm.Helper.Constants.Akhbaar_CP_URL, items.Entity.Thumbnail)' alt="@items.Entity.Thumbnail">
                }
            </a>
        </div>
        <div class="list-txt">
            <h3><a href="/Home/Detail/@items.ArticleID">@items.Title</a></h3>

           
           @* @if (items.CityID > 0)
            {
                <div class="badge source-Location">
