                @string.Format("{0}{1}{2}", items.Cityname, ",", items.CountryName)
                </div>
                <br />
            }
            <div class="row">
                <div class="col-xs-9">
                    @items.IslamicDate
                </div>
                <div class="">
                    @items.mappedDate.ToString("dd/MM/yyyy")
                </div>
            </div>*@
            
           
            <div class="badge source-list">@items.mappedDate.ToString("dd/MM/yyyy")</div>
             <div class="row" style="margin-top: 28px;">
                 <div class="col-xs-3">
                   <span class="badgecounts"><i class="fa fa-comment" aria-hidden="true" style="margin-right: 5px;"></i>@items.CommentCount</span>
                </div>
                 <div class="col-xs-offset-6">
                    <span class="badgecounts"><i class="fa fa-eye fa-lg" aria-hidden="true" style="margin-right: 5px;"></i>@items.ViewCount</span>
                </div>
            </div>
        </div>
        <!-- /list-txt -->
    </li>
                
}


