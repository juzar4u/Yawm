@model AkhbaarAlYawm.DataAccess.Custom.Entities.PP_Entities_Model.ArticleDetailModel

<div id="content">

    <div class="padding">
        <div class="width100">
            <div class="swiper-wrapper baba">
                <div class="swiper-slide">
                    <figure style="margin-top: 0px;">
                        <img src='@string.Format("{0}{1}", AkhbaarAlYawm.Helper.Constants.Akhbaar_CP_URL, Model.FeaturedImage)' alt="@Model.FeaturedImage" alt="" />
                    </figure>
                </div>
            </div>
        </div>
        <div id="Head-section">
            <h2 class="title-detail">@Model.Title</h2>
            <div id="innerDiv">
                <p class="source-detail-1">
                    <i class="fa fa-file-text-o" aria-hidden="true" style="color: darkgray; margin-right: 30px;"><span style="color: #ff9900; margin-left: 10px;">@Model.SourceName</span></i>
                    @if(Model.CityID > 0)
                    {
                    <i class="fa fa-map-marker" aria-hidden="true" style="color: darkgray; margin-right: 30px;"><span style="color: #ff9900; margin-left: 10px;">@Model.Mauze</span></i>
                    }
                </p>


                <div class="source-detail-2">
                    <p><span style="color: #993300; float: left; margin-right: 26px;">@Model.IslamicDate</span></p>
                    <p><span style="color: #993300; float: left;">@Model._newMappedDate</span></p>

                </div>
                <br />

            </div>
            <br />
            <br />
            <div class="info-detail">
                <i class="fa fa-eye" aria-hidden="true" style="color: darkgray;"><span style="padding: 10px;">@Model.ViewCount</span></i>
                <i class="fa fa-comment" aria-hidden="true" style="color: darkgray; padding-left: 50px;"><span style="padding: 10px;">@Model.CommentCount</span></i>
            </div>
        </div>
        <div id="body-section">
            <p class="body">@Model.Body</p>
        </div>

    </div>

    @if (Model.ListUploadedPictures.Count > 0)
    {
        <h4 style="border-bottom: 1px #000 solid; padding: 12px;">Akhbaar Photos:</h4>
        <div class="swiper-container">
            <div class="swiper-wrapper baba">

                @foreach (var items in Model.ListUploadedPictures)
                {
                    <div class="swiper-slide">
                        <figure>

                            <img src='@string.Format("{0}{1}", AkhbaarAlYawm.Helper.Constants.Akhbaar_CP_URL, items.URL)' alt="@items.URL" style="height:250px;"/>
                        </figure>
                    </div>
                
                    <!-- /topstory -->
                }

            </div>
            <br />
            <div class="swiper-pagination" style="position: relative"></div>
        </div>
    }
    <hr / style="border: 1px solid #ccc;">
    @Html.Partial("~/Views/Shared/commentPartialView.cshtml", Model.ArticleComment);

    <!-- RECENT ARTICLES -->
    <h2 class="separator">Top Viewed Related Articles</h2>

    <ul class="list box">
         @Html.Partial("~/Views/Shared/sharedHomeNonFeaturedView.cshtml", Model._RelatedArticles)
    </ul>
</div>