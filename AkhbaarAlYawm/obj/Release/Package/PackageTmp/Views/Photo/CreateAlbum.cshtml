@model AkhbaarAlYawm.DataAccess.Custom.Entities.PhotoModel.PhotoAlbumModel
@{
    ViewBag.Title = "CreateAlbum";
}

<style>
    #gap {
        margin-top: 100px;
    }
</style>
<h2>Create Album</h2>

@using (Html.BeginForm("CreateAlbum", "Photo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Photo Album</legend>

        
        <div class="ih" style="display: none">
            @Html.LabelFor(model => model)

            <div>
                @Html.EditorFor(model => model.PhotoAlbumID)
                @Html.ValidationMessageFor(model => model.PhotoAlbumID)
            </div>
        </div>

        <div class="ih">
            @Html.LabelFor(model => model.Title)

            <div>
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

         <div class="ih">
                    <label>--Photo Album Images--</label>

                    <div class="editor-field">
                        <div id="ImagesContainer" class="ImageContainer pull-left">
                            <div class="holder clearfix">
                                <input type="file" class="photoAlbum" name="photoAlbum1" value="" />
                            </div>
                        </div>
                    </div>
                </div>
        <p id="gap">
            <input type="submit" value="Create" id="submit" />
        </p>

        </fieldset>
    
}